{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"type": "shell",
			"command": "g++.exe \"${fileDirname}\\${fileBasename}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -std=c++23 %default_gcc_args% -I\"C:/GL/include\" -I\"E:/include\" -I\"E:/\" -L\"E:/GLpygame/libs\" -lglfw3 -lglad -lgdi32 -lfreetype",
			"problemMatcher": [{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(note|warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"severity": "info",
				"source": "Compiler"
			},{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				},
				"severity": "info",
				"source": "Compiler"
			},
			{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^.*ld.exe: .*?:.*?:(.*?):.*?: (.*)$",
					"file": 1,
					"message": 2
				},
				"severity": "info",
				"source": "Linker"
			}]
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "powershell -Command cd ${fileDirname};${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": []
		},
		{
			"label": "Compile & Run",
			"type": "shell",
			"dependsOn": [
				"Compile",
				"Run"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		}
	]
}
