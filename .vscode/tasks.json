{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"type": "shell",
			"command": "g++ \"${fileDirname}\\${fileBasename}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -std=c++23 %default_gcc_args% -I\"C:/GL/include\" -I\"E:/include\" -L\"E:/libs\" %glpy_deplnk% -lpygame",
			"problemMatcher": [{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(note|warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"severity": "info",
				"source": "Compiler"
			},{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				},
				"severity": "info",
				"source": "Compiler"
			},
			{
				"owner": "cpp",
				"fileLocation": "autoDetect",
				"pattern": {
					"regexp": "^.*ld.exe: .*?:.*?:(.*?):.*?: (.*)$",
					"file": 1,
					"message": 2
				},
				"severity": "info",
				"source": "Linker"
			}]
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "cd ${fileDirname} && ${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": []
		},
		{
			"label": "Compile & Run",
			"type": "shell",
			"dependsOn": [
				"Compile",
				"Run"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Build lib",
			"type": "shell",
			"command": "g++ -c chlibs.cpp fileutils.cpp glfwPygame.cpp gsdl.cpp postp.cpp pygame.cpp -std=c++23 %default_gcc_args% -I\"C:/GL/include\" -I\"E:/include\" && ar rcs pygame.a chlibs.o fileutils.o glfwPygame.o gsdl.o postp.o pygame.o && move pygame.a E:/libs/libpygame.a && del *.o",
			"problemMatcher": []
		}
	]
}
